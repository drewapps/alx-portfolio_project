<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    android:orientation="vertical"
    android:padding="@dimen/_15sdp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/top_rounded_bg"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorPrimary"
        android:text="Select Payment Type"
        android:textStyle="bold"
        android:textSize="@dimen/_18sdp"/>
    <RadioGroup
        android:layout_marginTop="@dimen/_15sdp"
        android:id="@+id/radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:visibility="gone"
            android:paddingHorizontal="@dimen/_8sdp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="#0F000000"
            android:id="@+id/razorpay_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableLeft="@drawable/ic_razorpay"
            android:drawablePadding="@dimen/_8sdp"
            android:textColor="@color/black"
            android:text="RazorPay" />

        <RadioButton
            android:visibility="gone"
            android:paddingHorizontal="@dimen/_8sdp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="#0F000000"
            android:id="@+id/stripe_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableLeft="@drawable/stripe_logo"
            android:drawablePadding="@dimen/_8sdp"
            android:textColor="@color/black"
            android:text="Stripe (International)" />

        <RadioButton
            android:visibility="gone"
            android:paddingHorizontal="@dimen/_8sdp"
            android:background="@drawable/rounded_bg"
            android:backgroundTint="#0F000000"
            android:id="@+id/in_app_rb"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:drawableLeft="@drawable/ic_google_play"
            android:drawablePadding="@dimen/_8sdp"
            android:textColor="@color/black"
            android:text="Pay With PlayStore" />

    </RadioGroup>

    <LinearLayout
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/cencel_btn"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@drawable/btn"
            android:paddingVertical="@dimen/_13sdp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"
            android:backgroundTint="#E8E8E8"/>
        <TextView
            android:id="@+id/buy_btn"
            android:layout_marginLeft="@dimen/_4sdp"
            android:background="@drawable/btn"
            android:paddingVertical="@dimen/_13sdp"
            android:gravity="center"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Buy Now"/>

    </LinearLayout>
</LinearLayout>
</layout>